<div style="--top-bar-background:#00848e; --top-bar-color:#f9fafb; --top-bar-background-lighter:#1d9ba4;">
  <div style="height: 500px;">
    <div style="--top-bar-background:#5C6AC4; --top-bar-color:rgb(255, 255, 255); --top-bar-background-lighter:hsl(198, 33%, 55%, 1);">
      <div class="Polaris-Frame Polaris-Frame--hasNav Polaris-Frame--hasTopBar" data-polaris-layer="true" data-has-navigation="true">
        <div class="Polaris-Frame__Skip">
          <button type="button" class="Polaris-Button">
            <span class="Polaris-Button__Content"><span class="Polaris-Button__Text">Skip to content</span></span>
          </button>
        </div>
        <div class="Polaris-Frame__TopBar" data-polaris-layer="true" data-polaris-top-bar="true" id="AppFrameTopBar">
          <div class="Polaris-TopBar">
            <button type="button" class="Polaris-TopBar__NavigationIcon" aria-label="Toggle menu">
              <span class="Polaris-Icon Polaris-Icon--colorWhite">
                <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
                  <path d="M19 11H1a1 1 0 1 1 0-2h18a1 1 0 1 1 0 2zm0-7H1a1 1 0 0 1 0-2h18a1 1 0 1 1 0 2zm0 14H1a1 1 0 0 1 0-2h18a1 1 0 1 1 0 2z"></path>
                </svg>
              </span>
            </button>
            <div class="Polaris-TopBar__LogoContainer">
              <a class="Polaris-TopBar__LogoLink" href="/" data-polaris-unstyled="true" style="width: 170px;">
                <img src=<%= image_path("power_lab.png") %> alt="Jaded Pixel" class="Polaris-TopBar__Logo" style="width: 170px;"></a>
            </div>
            <div class="Polaris-TopBar__Contents">

              <div class="Polaris-TopBar__SecondaryMenu"></div>
              <div>
                <div class="Polaris-TopBar-Menu__ActivatorWrapper">
                  <button type="button" class="Polaris-TopBar-Menu__Activator" tabindex="0" aria-controls="Popover1" aria-owns="Popover1" aria-haspopup="true" aria-expanded="false">
                    <div class="Polaris-MessageIndicator__MessageIndicatorWrapper">
                      <span aria-label="Avatar with initials <%= @shop_owner_name_initial %>" role="img" class="Polaris-Avatar Polaris-Avatar--styleThree Polaris-Avatar--sizeSmall">
                        <span class="Polaris-Avatar__Initials">
                          <svg class="Polaris-Avatar__Svg" viewBox="0 0 48 48">
                            <text x="50%" y="50%" dy="0.35em" fill="currentColor" font-size="26" text-anchor="middle"><%= @shop_owner_name_initial %></text>
                          </svg>
                        </span>
                      </span>
                    </div>
                    <span class="Polaris-UserMenu-UserMenu__Details">
                      <p class="Polaris-UserMenu-UserMenu__Name"><%= @shop_owner_name %></p>
                      <%#= raise %>
                      <p class="Polaris-UserMenu-UserMenu__Detail"><%= @current_shop_name %></p>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Barre de chargement à activer en mettant de 0 à 1 en fonction de l'état de chargement à scaleX(1) + Ajouter Skeleton template lors du chargement https://polaris.shopify.com/components/feedback-indicators/skeleton-page#navigation -->
        <div style="--top-bar-background:#00848e; --top-bar-color:#f9fafb; --top-bar-background-lighter:#1d9ba4;">
          <div style="height: 100px;">
            <div class="Polaris-Frame" data-polaris-layer="true">
              <div class="Polaris-Frame__Skip"><button type="button" class="Polaris-Button"><span class="Polaris-Button__Content"><span class="Polaris-Button__Text">Skip to content</span></span></button></div>
              <div class="Polaris-Frame__LoadingBar" id="AppFrameLoadingBar">
                <div class="Polaris-Frame-Loading">
                  <div id="loading_bar" class="Polaris-Frame-Loading__Level" aria-valuemin="0" aria-valuemax="100" role="progressbar" aria-valuenow="20" style="transform: scaleX(0);"></div>
                </div>
              </div>
              <main class="Polaris-Frame__Main" id="AppFrameMain" data-has-global-ribbon="false">
                <div class="Polaris-Frame__Content"></div>
              </main>
            </div>
          </div>
        </div>
        <script>
          document.getElementById("loading_bar").style.transform = "scaleX(0.10)";
        </script>
        <div class="Polaris-Frame-ToastManager"></div>
        <div>
          <div class="Polaris-Frame__Navigation" id="AppFrameNav">
            <nav class="Polaris-Navigation">
              <div class="Polaris-Navigation__UserMenu"></div>
              <div class="Polaris-Navigation__PrimaryNavigation Polaris-Scrollable Polaris-Scrollable--vertical" data-polaris-scrollable="true">
                <ul class="Polaris-Navigation__Section">
                  <li class="Polaris-Navigation__ListItem">
                    <button type="button" class="Polaris-Navigation__Item" style="cursor: none">
                      <div class="Polaris-Navigation__Icon">
                        <span class="Polaris-Icon">
                          <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
                            <path d="M17 9H5.414l3.293-3.293a.999.999 0 1 0-1.414-1.414l-5 5a.999.999 0 0 0 0 1.414l5 5a.997.997 0 0 0 1.414 0 .999.999 0 0 0 0-1.414L5.414 11H17a1 1 0 1 0 0-2" fill-rule="evenodd"></path>
                          </svg>
                        </span>
                      </div>
                      <a href="<%= @admin_shopify_path %>" class="Polaris-Navigation__Text" style="text-decoration: none; color: buttontext; cursor: none;">Back to Shopify</a>
                    </button>
                  </li>
                </ul>
                <ul class="Polaris-Navigation__Section Polaris-Navigation__Section--withSeparator">
                  <li class="Polaris-Navigation__SectionHeading">
                    <span class="Polaris-Navigation__Text">Bundle Upsell App</span>
                  </li>
                  <li class="Polaris-Navigation__ListItem">
                    <button type="button" class="Polaris-Navigation__Item">
                      <div class="Polaris-Navigation__Icon">
                        <span class="Polaris-Icon">
                          <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
                            <path d="M19.664 8.252l-9-8a1 1 0 0 0-1.328 0L8 1.44V1a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v5.773L.336 8.252a1.001 1.001 0 0 0 1.328 1.496L2 9.449V19a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V9.449l.336.299a.997.997 0 0 0 1.411-.083 1.001 1.001 0 0 0-.083-1.413zM16 18h-2v-5a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1v5H4V7.671l6-5.333 6 5.333V18zm-8 0v-4h4v4H8zM4 2h2v1.218L4 4.996V2z" fill-rule="evenodd"></path>
                          </svg>
                        </span>
                      </div>
                      <a href="/" style="text-decoration: none; color: buttontext; cursor: none;"><span class="Polaris-Navigation__Text">Dashboard</span></a>
                    </button></li>
                  <li class="Polaris-Navigation__ListItem">
                    <button type="button" class="Polaris-Navigation__Item">
                      <div class="Polaris-Navigation__Icon">
                        <span class="Polaris-Icon">
                          <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
                            <path fill="currentColor" d="M1 13h5l1 2h6l1-2h5v6H1z"></path>
                            <path d="M2 18v-4h3.382l.723 1.447c.17.339.516.553.895.553h6c.379 0 .725-.214.895-.553L14.618 14H18v4H2zM19 1a1 1 0 0 1 1 1v17a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h4a1 1 0 0 1 0 2H2v9h4c.379 0 .725.214.895.553L7.618 14h4.764l.723-1.447c.17-.339.516-.553.895-.553h4V3h-3a1 1 0 0 1 0-2h4zM6.293 6.707a.999.999 0 1 1 1.414-1.414L9 6.586V1a1 1 0 0 1 2 0v5.586l1.293-1.293a.999.999 0 1 1 1.414 1.414l-3 3a.997.997 0 0 1-1.414 0l-3-3z" fill-rule="evenodd"></path>
                          </svg>
                        </span>
                      </div>
                      <a href="/" style="text-decoration: none; color: buttontext; cursor: none;"><span class="Polaris-Navigation__Text">Offers</span></a>
                    </button>
                  </li>
                  <li class="Polaris-Navigation__ListItem">
                    <button type="button" class="Polaris-Navigation__Item">
                      <div class="Polaris-Navigation__Icon">
                        <span class="Polaris-Icon">
                          <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
                            <path fill="currentColor" d="M1 13h5l1 2h6l1-2h5v6H1z"></path>
                            <path d="M19 0h-9c-.265 0-.52.106-.707.293l-9 9a.999.999 0 0 0 0 1.414l9 9a.997.997 0 0 0 1.414 0l9-9A.997.997 0 0 0 20 10V1a1 1 0 0 0-1-1zm-9 17.586L2.414 10 4 8.414 11.586 16 10 17.586zm8-8l-5 5L5.414 7l5-5H18v7.586zM15 6a1 1 0 1 0 0-2 1 1 0 0 0 0 2"></path>
                          </svg>
                        </span>
                      </div>
                      <a href="/" style="text-decoration: none; color: buttontext; cursor: none;"><span class="Polaris-Navigation__Text">Settings</span></a>
                    </button>
                  </li>
                </ul>
              </div>
            </nav>
            <button type="button" class="Polaris-Frame__NavigationDismiss" aria-hidden="true" aria-label="Close navigation" tabindex="-1">
              <span class="Polaris-Icon Polaris-Icon--colorWhite">
                <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
                  <path d="M11.414 10l6.293-6.293a.999.999 0 1 0-1.414-1.414L10 8.586 3.707 2.293a.999.999 0 1 0-1.414 1.414L8.586 10l-6.293 6.293a.999.999 0 1 0 1.414 1.414L10 11.414l6.293 6.293a.997.997 0 0 0 1.414 0 .999.999 0 0 0 0-1.414L11.414 10z" fill-rule="evenodd"></path>
                </svg>
              </span>
            </button>
          </div>
        </div>
        <main class="Polaris-Frame__Main" id="AppFrameMain" data-has-global-ribbon="false">

